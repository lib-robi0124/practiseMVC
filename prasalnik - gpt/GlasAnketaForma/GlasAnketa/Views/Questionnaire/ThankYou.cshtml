@{
    ViewData["Title"] = "Thank You";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card border-success">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h1 class="text-success mb-3">Thank You!</h1>

                    <p class="lead mb-4">
                        Your responses have been successfully submitted. We appreciate you taking the time to complete the questionnaire.
                    </p>

                    <div class="alert alert-info d-inline-block">
                        <i class="fas fa-info-circle"></i>
                        Your feedback is valuable and will help us improve.
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Questionnaire")" class="btn btn-primary me-2">
                            View Other Questionnaires
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary">
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>