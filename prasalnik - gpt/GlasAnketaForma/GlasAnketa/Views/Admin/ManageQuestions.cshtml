@model List<QuestionVM>
@{
    ViewData["Title"] = "Manage Questions";
}

<div class="admin-container">
    <div class="admin-header">
        <h1>📝 Manage Questions</h1>
        <p>Create, edit, and organize survey questions</p>
        <div class="user-info">
            <small>Logged in as: <strong>@Context.Session.GetString("UserName")</strong></small> |
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">← Back to Dashboard</a> |
            <a href="@Url.Action("ManageForms", "Admin")" class="btn btn-info">Manage Forms</a> |
            <a href="@Url.Action("Logout", "Account")" class="text-danger">Logout</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="admin-actions mb-4">
        <a href="@Url.Action("CreateQuestion", "Admin")" class="btn btn-success">
            ➕ Create New Question
        </a>
        <a href="@Url.Action("CreateForm", "Admin")" class="btn btn-primary">
            📋 Create New Form
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>All Questions (@Model.Count)</h3>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Question Text</th>
                                <th>Type</th>
                                <th>Form</th>
                                <th>Required</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var question in Model)
                            {
                                <tr>
                                    <td>@question.Id</td>
                                    <td>
                                        <strong>@question.Text</strong>
                                        @if (question.IsRequired)
                                        {
                                            <span class="badge badge-warning ml-1">Required</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(question.QuestionType == "Scale" ? "badge-info" : "badge-secondary")">
                                            @question.QuestionType
                                        </span>
                                    </td>
                                    <td>Form @question.QuestionFormId</td>
                                    <td>
                                        @if (question.IsRequired)
                                        {
                                            <span class="text-success">✓</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">✗</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditQuestion", "Admin", new { id = question.Id })"
                                           class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form asp-action="DeleteQuestion" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@question.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Are you sure you want to delete this question?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <div style="font-size: 3em;">❓</div>
                    <h4>No Questions Found</h4>
                    <p class="text-muted">No questions have been created yet.</p>
                    <a href="@Url.Action("CreateQuestion", "Admin")" class="btn btn-primary">Create First Question</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .badge {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }

    .badge-info {
        background-color: #17a2b8;
        color: white;
    }

    .badge-secondary {
        background-color: #6c757d;
        color: white;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .admin-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }
</style>