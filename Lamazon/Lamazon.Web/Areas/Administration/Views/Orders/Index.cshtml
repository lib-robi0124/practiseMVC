@model IEnumerable<OrderViewModel>

    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-end">
                <form class="form-inline">
                    <input id="inputSearch" class="form-control txt-search" placeholder="Search products"/>
                    <button class="btn btn-search btn-info" type="button" onclick="searchItems()">
                        <i class="material-icons">search</i>
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <table id="ordersTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                     <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
              
                    <th>@Html.DisplayNameFor(model => model.User)</th>
               
                    <th>@Html.DisplayNameFor(model => model.CountryCode)</th>
                
                    <th>@Html.DisplayNameFor(model => model.CountryFlagUrl)</th>
                
                    <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                
                    <th>@Html.DisplayNameFor(model => model.OrderStatus)</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
    </div>

@section Scripts {
    <script>
        var ordersTable = $("#ordersTable").DataTable({
            processing: true,
            serverSide: true,
            dom: '<i<t><"custom-class"l>p>',
            ajax: {
                url: "/Administration/Orders/GetOrders",
                type: "POST",
                data: function(data) {
                    var searchValue = $("#inputSearch").val();
                    data.search.value = searchValue;
                }
            },
            columns: [
                {
                    data: "orderNumber",
                    name: "OrderNumber"
                },
                {
                    data: "user.fullName",
                    name: "User.FullName"
                },
                {
                    data: "countryCode",
                    name: "CountryCode"
                },
                {
                    data: "countryFlagUrl",
                    sClass: "text-center",
                    orderable: false,
                    render: function(data, type, row, meta) {
                        return `<img class='order-country-flag' src='${data}' />`
                    }
                },
                {
                    sClass: "text-right",
                    data: "totalAmount",
                    name: "TotalAmount"
                },
                {
                    sClass: "text-center",
                    data: "orderStatusString",
                    name: "OrderStatus"
                },
                {
                    data: "id",
                    orderable: false,
                    sClass: "column-actions",
                    render: function(data, type, row, meta) {
                        return `<a class="action-button text-warning" href="/Administration/Orders/Edit/${data}"><i class="material-icons">edit</i></a>`
                    }
                }
            ]
        });

        $("#inputSearch").on("keydown", function (e) {
            var key = e.which;
            if (key == 13) { // 13 == Enter button on keyboard
                searchItems();
                e.preventDefault();
            }
        })

        function searchItems() {
            ordersTable.ajax.reload();
        }
    </script>
    }

