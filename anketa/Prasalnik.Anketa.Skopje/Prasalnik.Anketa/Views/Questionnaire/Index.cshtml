@model Prasalnik.ViewModels.Models.QuestionnaireViewModel

@{
    ViewData["Title"] = "Questionnaire";
}

<h2>@Model.Title</h2>

<form asp-action="SubmitAnswers" method="post">
    <input type="hidden" name="QuestionnaireId" value="@Model.Id" />

    @for (int i = 0; i < Model.QuestionItems.Count; i++)
    {
        <div class="form-group">
            <label>@Model.QuestionItems[i].QuestionText</label>
            <input type="text" name="Answers[@Model.QuestionItems[i].Id]" class="form-control" />
        </div>
    }

    <button type="submit" class="btn btn-success">Submit</button>
</form>