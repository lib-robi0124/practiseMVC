@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
   
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>🚀 Admin Dashboard - SUCCESS!</h1>
            <p>Welcome, <strong>@Context.Session.GetString("UserName")</strong>!</p>
            <p>Role: <strong>@Context.Session.GetString("UserRole")</strong></p>
            <p>Company ID: <strong>@Context.Session.GetInt32("CompanyId")</strong></p>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Logout</a>
        </div>

        <div class="dashboard-cards">
            <div class="dashboard-card">
                <h3>📊 Questionnaires</h3>
                <div class="number">2</div>
                <p>Active Forms</p>
            </div>

            <div class="dashboard-card">
                <h3>📝 Responses</h3>
                <div class="number">0</div>
                <p>Total Answers</p>
            </div>

            <div class="dashboard-card">
                <h3>👥 Users</h3>
                <div class="number">2</div>
                <p>Registered Users</p>
            </div>
        </div>

        <div class="admin-actions">
            <h3>Quick Actions</h3>
            <div style="display: flex; gap: 15px; margin-top: 20px;">
                <a href="@Url.Action("ManageQuestions", "Admin")" class="btn btn-primary">
                    📝 Manage Questions
                </a>
                <a href="@Url.Action("ManageForms", "Admin")" class="btn btn-success">
                    📋 Manage Forms
                </a>
                <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-info">
                    👥 Manage Users
                </a>
                <a href="@Url.Action("ViewResults", "Admin")" class="btn btn-warning">
                    📊 View Results
                </a>
            </div>
        </div>
    </div>

</body>
</html>
