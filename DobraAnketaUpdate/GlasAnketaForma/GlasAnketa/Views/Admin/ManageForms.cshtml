@model List<QuestionFormVM>
@{
    ViewData["Title"] = "Manage Forms";
}

<div class="admin-container">
    <div class="admin-header">
        <h1>📋 Manage Question Forms</h1>
        <p>Create and organize questionnaire forms</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="user-info">
                <small>Logged in as: <strong>@Context.Session.GetString("UserName")</strong></small>
            </div>
            <div class="admin-nav-actions">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary btn-sm">← Back to Dashboard</a>
                <a href="@Url.Action("ManageQuestions", "Admin")" class="btn btn-info btn-sm">Manage Questions</a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="admin-actions mb-4">
        <a href="@Url.Action("CreateForm", "Admin")" class="btn btn-success">
            ➕ Create New Form
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Questionnaire Forms (@Model.Count)</h3>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Questions</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var form in Model)
                            {
                                <tr>
                                    <td>@form.Id</td>
                                    <td>
                                        <strong>@form.Title</strong>
                                    </td>
                                    <td>@form.Description</td>
                                    <td>
                                        <span class="badge badge-info">@form.QuestionCount questions</span>
                                    </td>
                                    <td>
                                        @if (form.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@form.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("EditForm", "Admin", new { id = form.Id })"
                                           class="btn btn-sm btn-outline-primary">Edit</a>

                                        @if (form.IsActive)
                                        {
                                            <form asp-action="ToggleFormStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@form.Id" />
                                                <input type="hidden" name="isActive" value="false" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    Deactivate
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="ToggleFormStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@form.Id" />
                                                <input type="hidden" name="isActive" value="true" />
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    Activate
                                                </button>
                                            </form>
                                        }

                                        <form asp-action="DeleteForm" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@form.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Are you sure you want to delete this form and all its questions?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <div style="font-size: 3em;">📝</div>
                    <h4>No Forms Found</h4>
                    <p class="text-muted">No questionnaire forms have been created yet.</p>
                    <a href="@Url.Action("CreateForm", "Admin")" class="btn btn-primary">Create First Form</a>
                </div>
            }
        </div>
    </div>
</div>